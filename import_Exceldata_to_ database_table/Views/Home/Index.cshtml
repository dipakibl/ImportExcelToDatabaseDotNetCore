@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Import" asp-controller="Home" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <input type="file" name="files" class="form-control" required="required" />
            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-primary" />
                <br />
                <span style="color:green">@ViewBag.msg</span>
            </div>
        </div>
    </div>
</form>